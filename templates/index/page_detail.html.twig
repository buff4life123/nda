{% extends "base.html.twig" %}
{% block content %}
<div class="w3-row">
	<div class="w3-col l12 m12 s12">
		<div class="w3-padding w3-center">
			<h1>{{pageDesc.title}}</h1>
			{% if pageSub != 'contacts' %}
				<h3>{{pageDesc.sub_title}}</h3>
			{% endif %}
		</div>
	</div>
	<div class="w3-col l12 m12 s12">
		<div class="w3-card-4">
			<div class="w3-padding-large">
				{% for i in 0..(pageDesc.text_list|length)-1 %}
					<div>
						<p>{{pageDesc.text_list[i].text}}</p>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
	{% if pageSub == 'contacts' %}
		<form id="formContact">
			<div class="w3-col l12 m12 s12">
				<div class="w3-padding">
					<h4>{{pageDesc.sub_title}}</h4>
				</div>
				<div class="w3-card-4">	
					<div class="w3-padding-large">
						<div>
							<label style="text-transform: capitalize;" for="contact_name">{{pageDesc.form.name}}</label><label class="contact_name w3-text-red w3-hide w3-right"></label>
							<input type="text" id="contact_name" name="contact_name" placeholder="{{pageDesc.form.name}}">
						</div>
						<div>
							<label style="text-transform: capitalize;" for="contact_email">{{pageDesc.form.email}}</label><label class="contact_email w3-text-red w3-hide w3-right"></label>
							<input type="text" id="contact_email" name="contact_email" placeholder="{{pageDesc.form.email}}">
						</div>
						<div>
							<label style="text-transform: capitalize;" for="contact_telephone">{{pageDesc.form.telephone}}</label><label class="contact_telephone w3-text-red w3-hide w3-right"></label>
							<input type="text" id="contact_telephone" name="contact_telephone" placeholder="{{pageDesc.form.telephone}}">
						</div>
						<div>
							<label style="text-transform: capitalize;" for="contact_message">{{pageDesc.form.message}}</label><label class="contact_message w3-text-red w3-hide w3-right"></label>
							<textarea class="w3-large w3-input w3-round w3-border" rows="5"id="contact_message" name="contact_message" placeholder="{{pageDesc.form.message}}"></textarea>
						</div>
					</div>
				</div>
				<div class="w3-padding-large pull-left">	
					<label class="contact_success w3-text-green w3-hide w3-left"></label>
				</div>
				<div class="w3-padding pull-right">
					<span onclick="formContact()" class="w3-btn w3-green">{{pageDesc.form.send}}</span>
				</div>
			</div>
		</form>
	{% endif %}
</div>

{% endblock %}